@{string renminbi = "￥";}
<div class="members_con">
    <section class="members_goodslist">
        <ul>
            @if (@Model.list.Count > 0)
            {
                for (int i = 0; i < @Model.list.Count; i++)
                {
                    var goods = @Model.list[i];
                    <li class="g-box por rebox">
                        <section><a href="@goods.link"><img src="@goods.pic" width="88" height="88"></a></section>
                        <section class="g-flex">
                            <a href="@goods.link"> @goods.title</a>
                            <p>
                                @renminbi @goods.price
                                @if (goods.is_limitbuy)
                                {
                                    <i class="icon_buy"><a href="@goods.link ">抢购</a></i>
                                }
                                else
                                {
                                    <i class="icon_buy add-buy-btn"><a href="javascript:;" class="buyproduct" data-pid="@goods.product_id">购买</a></i>
                                }
                            </p>
                        </section>
                    </li>
                }
            }
        </ul>
    </section>
</div>
