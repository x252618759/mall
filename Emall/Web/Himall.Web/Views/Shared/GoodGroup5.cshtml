@{string renminbi = "￥";}
<div class="members_con">
    <section class="members_goodspic">
        <ul>
            @if (@Model.list.Count > 0)
            {
                for (int i = 0; i < @Model.list.Count; i++)
                {
                    if (i % 2 == 0)
                    {
                        var goods = @Model.list[i];
                        <li class="b_mingoods goods_even">
                            <div class="b_mingoods_wrapper">
                                <a class="goodsimg" href="@goods.link">
                                    <img src="@goods.pic">
                                </a>
                                @if (@Model.showIco || @Model.showPrice)
                                {
                                    <p class="title"><a href="@goods.link">@goods.title</a></p>
                                    <p class="pic_box"><span class="pirce">&yen; @goods.price</span><span class="yj">&yen;@goods.original_price</span></p>
                                }
                                @if (goods.is_limitbuy)
                                {
                                    <p class="b_mingoods_btn"><a href="@goods.link">抢购</a></p>
                                }
                                else
                                {
                                    <p class="b_mingoods_btn add-buy-btn"><a href="javascript:;" class="buyproduct" data-pid="@goods.product_id">购买</a></p>

                                }
                            </div>
                        </li>
                    }
                    else
                    {
                        var goods = @Model.list[i];
                        <li class="b_mingoods goods_odd">
                            <div class="b_mingoods_wrapper">
                                <a class="goodsimg" href="@goods.link">
                                    <img src="@goods.pic">
                                </a>
                                @if (@Model.showIco || @Model.showPrice)
                                {
                                    <p class="title"><a href="@goods.link">@goods.title</a></p>
                                    <p class="pic_box"><span class="pirce">&yen; @goods.price</span><span class="yj">&yen;@goods.original_price</span></p>
                                }
                                @if (goods.is_limitbuy)
                                {
                                    <p class="b_mingoods_btn"><a href="@goods.link">抢购</a></p>
                                }
                                else
                                {
                                    <p class="b_mingoods_btn add-buy-btn"><a href="javascript:;" class="buyproduct" data-pid="@goods.product_id">购买</a></p>

                                }
                            </div>
                        </li>
                    }

                }
            }
        </ul>
    </section>
</div>