@{string renminbi = "￥";}
<div class="members_con">
    <section class="members_goodspic">
        <ul class="">
            @if (@Model.list.Count > 0)
            {
                for (int i = 0; i < @Model.list.Count; i++)
                {
                    var good = @Model.list[i];
                    <li class="mingoods">
                        <a class="goodsimg" href="@good.link "><img src="@good.pic"></a>
                        @if (@Model.showIco || @Model.showPrice)
                        {
                            <span class="replace">
                                @if (@Model.showIco)
                                {
                                    if (good.is_limitbuy)
                                    {
                                        <i><a href="@good.link">抢购</a></i>
                                    }
                                    else
                                    {
                                        <i class="add-buy-btn"><a href="javascript:;" class="buyproduct" data-pid="@good.product_id">购买</a></i>
                                    }
                                }
                                @if (@Model.showPrice)
                                {
                                    @renminbi;@good.price;
                                    <span class="original_price"><s>&yen; @good.original_price</s></span>
                                }
                            </span>
                        }

                    </li>
                }
            }
        </ul>
    </section>
</div>